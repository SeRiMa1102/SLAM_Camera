{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean",
      "type": "shell",
      "options": {
        "statusbar": {
            "hide" : true
        }
      },
      "command": "rm",
      "args": ["-rf", ".venv", "build", "lib", "Thirdparty/DBoW2/build", "Thirdparty/DBoW2/lib", "Thirdparty/g2o/build", "Thirdparty/g2o/lib", "Thirdparty/Sophus/build", "Vocabulary/ORBvoc.txt"],
      "group": "none",
      "problemMatcher": []
    },
    {
        "label": "Make",
        "type": "shell",
        "command": "./build.sh",
        "args": [],
        "options": {
            "shell": {
            "executable": "/bin/bash"
            }
        },
        "group": "none",
        "problemMatcher": []
    },
    {
      "label": "Run Own",
      "type": "shell",
      "command": "time",
      "args": [
        "./build/camera_stabilization",
        "./Vocabulary/ORBvoc.txt",
        "./calib.yaml",
        "./extra/video.mp4",
        "dataset-own"
      ],
      "options": {
        "env": {
          "LD_LIBRARY_PATH": "/usr/local/lib:${env:LD_LIBRARY_PATH}"
        },
        "statusbar": {
            "hide" : false
        }
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
        {
      "label": "Get",
      "type": "shell",
      "command": "time",
      "args": [
        "./build/get_position"
      ],
      "options": {
        "env": {
          "LD_LIBRARY_PATH": "/usr/local/lib:${env:LD_LIBRARY_PATH}"
        },
        "statusbar": {
            "hide" : false
        }
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run ORB_SLAM3 Mono",
      "type": "shell",
      "command": "time",
      "args": [
        "./Examples/Monocular/mono_euroc",
        "./Vocabulary/ORBvoc.txt",
        "./Examples/Monocular/EuRoC.yaml",
        "./extra/MH01",
        "./Examples/Monocular/EuRoC_TimeStamps/MH01.txt",
        "dataset-MH01_mono"
      ],
      "options": {
        "env": {
          "LD_LIBRARY_PATH": "/usr/local/lib:${env:LD_LIBRARY_PATH}"
        },
        "statusbar": {
            "hide" : true
        }
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Eva Own",
      "options": {
        "statusbar": {
            "hide" : true
        }
      },
      "type": "shell",
      "command": "source .venv/bin/activate && python3 evaluation/own_traj.py f_dataset-own.txt --plot Own.pdf",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Eva",
      "options": {
        "statusbar": {
            "hide" : true
        }
      },
      "type": "shell",
      "command": "source .venv/bin/activate && python3 evaluation/evaluate_ate_scale.py evaluation/Ground_truth/EuRoC_left_cam/MH01_GT.txt f_dataset-MH01_mono.txt --plot MH01.pdf --verbose2 --verbose",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
